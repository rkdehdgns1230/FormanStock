extends ../navi_board_layout

block content                        
    main#main
        
        section#blog.blog
            .container(data-aos='fade-up')
                .row.g-5
                    .col-lg-8
                        article.blog-details
                            h2.title #{rows[0][0].POST_TITLE}
                            if user_id == rows[rows[0][0].USER_ID] 
                                form(action=`/formanstock/board/${rows[0][0].STOCK_CODE}/posts/${rows[0][0].POST_NO}/removal` method = 'post')
                                    button.btn.btn-danger(type='submit' style='float:right') 삭제
                                a.btn.btn-success.btn-icon-split(href=`/formanstock/board/${rows[0][0].STOCK_CODE}/posts/${rows[0][0].POST_NO}/info`)
                                    span.icon.text-white-50
                                        i.fas.fa-check 
                                    span.text 수정  
                            .meta-top
                                ul
                                    li.d-flex.align-items-center
                                        i.bi.bi-person
                                        th #{rows[0][0].USER_ID}
                                    li.d-flex.align-items-center
                                        i.bi.bi-clock
                                        th #{rows[0][0].REG_DATE}
                                    //- li.d-flex.align-items-center
                                    //-     i.bi.bi-chat-dots
                                    //-     a(href='blog-details.html') 12 Comments
                            // End meta top
                            .content
                                p #{rows[0][0].POST_CONTENT}
                            // End post content
                            // End blog post
                            
                            // End post author
                             
                            .comments
                                //- h4.comments-count 8 Comments
                                
                                for row in rows[1] 
                                    .d-flex
                                        div
                                            h5 #{row.user_id}
                                            th #{row.reg_date}
                                            p #{row.comment_content}
                                .reply-form
                                    h4 덧글 달기
                                    form(action=`/formanstock/board/${rows[0][0].STOCK_CODE}/posts/${rows[0][0].POST_NO}/comment` method = 'post') 
                                        .row
                                            .col.form-group
                                                textarea.form-control(name='comment' placeholder='내용을 작성하세요')
                                        button.btn.btn-primary(type='submit') 작성


                            
                                    
                            // End blog comments
        
                            .container.mt-4
                                .copyright
                                    | © Copyright 
                                    strong
                                        span Impact
                                    | . All Rights Reserved
                                .credits
                                    // All the links in the footer should remain intact.
                                    // You can delete the links only if you purchased the pro version.
                                    // Licensing information: https://bootstrapmade.com/license/
                                    // Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/impact-bootstrap-business-website-template/
                                    | Designed by 
                                    a(href='https://bootstrapmade.com/') BootstrapMade
                        // End Footer
                        // End Footer
                        a.scroll-top.d-flex.align-items-center.justify-content-center(href='#')
                            i.bi.bi-arrow-up-short
                        #preloader
                        // Vendor JS Files
                        script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
                        script(src='/vendor/aos/aos.js')
                        script(src='/vendor/glightbox/js/glightbox.min.js')
                        script(src='/vendor/purecounter/purecounter_vanilla.js')
                        script(src='/vendor/swiper/swiper-bundle.min.js')
                        script(src='/vendor/isotope-layout/isotope.pkgd.min.js')
